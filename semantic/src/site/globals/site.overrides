body {
  margin: 0;
}
.parallax-container {
  position: absolute;
  overflow: visible;
  width: 100%;
  height: 900px;
  z-index: -999 !important;
}
.parallax-layer {
  width: 100%;
  height: 900px;
  position: fixed;
  left: 0;
  top: 0;
  background-position: top center;
  background-repeat: no-repeat;
  background-size: 1460px;
}
  .layer-0 {
    top: 0;
    //z-index: 5;
    background-image: url('../../img/back.png');
  }
  .layer-1 {
    top: 0px;
    //z-index: 10;
    background-image: url('../../img/layer6.png');
  }
  .layer-2 {
    top: 0px;
    //z-index: 15;
    background-image: url('../../img/layer5.png');
  }
  .layer-3 {
    top: 0px;
    //z-index: 20;
    background-image: url('../../img/layer4.png');
  }
  .layer-4 {
    top: 0px;
    //z-index: 25;
    background-image: url('../../img/layer3.png');
  }
  .layer-5 {
    top: 0px;
    //z-index: 30;
    background-image: url('../../img/layer2.png');
  }
  .layer-6 {
    top: 0px;
    //z-index: 35;
    background-image: url('../../img/layer1.png');
  }

  
.content {
  position: absolute;
  top: 600px;
  background: #415a6c;
  width: 100%;
  min-height: 1500px;
}
.content h1 {
  color: #fff;
  font-size: 2em;
  text-transform: uppercase;
  text-align: center;
}

.ui.vertical.segment h1,
.ui.vertical.segment h2,
.ui.vertical.segment h3,
.ui.vertical.segment h4,
.ui.vertical.segment h5,
.ui.vertical.segment p ,
#top-menu a {
  color: @vw_white !important;
}