/*******************************
         Site Overrides
*******************************/
.ui.vw_black {
	background-color: @vw_black !important;
}

.ui.vw_pink {
	background-color: @vw_pink !important;
}

.ui.vw_blue {
	background-color: @vw_blue !important;
}

.ui.vw_light_blue {
	background-color: @vw_light_blue !important;
}

.ui.vw_yellow {
	background-color: @vw_yellow !important;
}

.ui.vw_grey {
  background-color: @vw_grey !important;
}

.ui.active-header {
  background-color: @vw_black !important;
  color: @vw_white !important; 

}

.ui.hidden.menu {
  display: none !important;
}
.ui.masthead.segment {
  min-height: 700px;
  padding: 1em 0em;
  background-color: @vw_black !important;
}

#first-panel {
	margin-top: 850px !important;
}

.ui.segment {
	min-height: 700px !important;
	z-index: 100 !important;
}

#top-menu .item {
	top: 0px !important;
}

div #top-menu {
  z-index: 99999 !important;
  background-color: @vw_pink !important;
}

.masthead .logo.item img {
  margin-right: 1em;
}
.masthead .ui.menu .ui.button {
  margin-left: 0.5em !important;
}
.masthead h1.ui.header {
  margin-top: 3em;
  margin-bottom: 0em;
  font-size: 4em;
  font-weight: normal;
}
.masthead h2 {
  font-size: 1.7em;
  font-weight: normal;
}
.ui.vertical.stripe {
  padding: 8em 0em;
  background-color: @vw_black !important;
  color: @vw_white !important;
}
.ui.vertical.stripe h3 {
  font-size: 2em;
}
.ui.vertical.stripe .button + h3,
.ui.vertical.stripe p + h3 {
  margin-top: 3em;
}
.ui.vertical.stripe .floated.image {
  clear: both;
}
.ui.vertical.stripe p {
  font-size: 1.33em;
}
.ui.vertical.stripe .horizontal.divider {
  margin: 3em 0em;
}


@media only screen and (max-width: 700px) {

